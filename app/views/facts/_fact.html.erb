    <li id="<%= fact.id %>">
	<%= link_to fact.fact, fact, {:title => fact.fact} %>
	<div class="socialTools"> 
		<fb:like href="<%= root_url %>facts/<%= fact.id %>" layout="button_count" show_faces="false" width="100" height="40" action="like" colorscheme="dark" font="arial"></fb:like>
		<g:plusone href="<%= root_url %>facts/<%= fact.id %>" size="small"></g:plusone>
	</div>
	<% if admin_signed_in? %>  
	    <span class="adminActions" id="tools">
			<%= fact.publish %>
		    <%= link_to 'Show', fact %>
		    <%= link_to 'Edit', edit_fact_path(fact) %>
		    <%= link_to 'Destroy', fact, :confirm => 'Are you sure?', :method => :delete %>
		</span>
	<% end %>
	</li>